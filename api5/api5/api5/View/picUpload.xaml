<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="api5.View.picUpload"
            Title="upload pictures">
  <ScrollView>
    <StackLayout Spacing="10" Padding="10">
      <Entry x:Name="name" Placeholder="name"/>
      <Entry x:Name="description" Placeholder="description"/>
      <Entry x:Name="jaarboekId" Placeholder="jaarboek id"/>
      <Entry x:Name="imageId" Placeholder="image id"/>
      <Button x:Name="takePhoto" Text="Take Photo"/>
      <Button x:Name="pickPhoto" Text="Pick Photo"/>
      <Button x:Name="takeVideo" Text="Take Video"/>
      <Button x:Name="pickVideo" Text="Pick Video"/>
      <Entry x:Name="directoryLocation"/>
      <Label Text="remote path" x:Name="RemotePathLabel"/>
      <Image x:Name="image"/>
      <Button x:Name="gg" Text="upload" Clicked="UploadFile_Clicked"/>
    </StackLayout>
  </ScrollView>
</ContentPage>